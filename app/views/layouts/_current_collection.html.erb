<div class="current-collection-partial">
  <div class="collection-info">
    <h2>Current Collection:
      (<%= link_to current_user.collections.count, users_collections_path(current_user) %>
      total)
    </h2>
  </div>

  <div class="current-collection">
    <div class="dashboard-content">

      <div class="row">
        <div class="col-md-3 collection-title">
          <%= current_collection.title %>
        </div>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-2">
            <%= image_tag current_collection.image.url(:medium), class: "img-responsive" %>
            <p><%= current_collection.description %></p>
          </div>
          <% current_collection.pieces.map do |piece| %>
            <div class="col-md-1">
              <%= image_tag piece.image.url(:thumb), class: "img-responsive current-collection-images" %>
            </div>
          <% end %>
        </div>

      </div>
      <h4>
        <%= link_to "Add Piece to Collection (#{current_collection.pieces.count} total)", new_users_collection_piece_path(current_user, current_collection) %>
      </h4>
    </div>
  </div>
</div>
