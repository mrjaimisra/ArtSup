<%= render partial: "layouts/navbar" %>

<div class="container">

  <div class="row">

    <h3>Thank you for supporting <%= @user.name %> by purchasing the following
      item on their wishlist: </h3>

    <div class="itemConfirm">
      <%= @title %>
      <br/>
      <%= image_tag @image %>
      <br/>
      <%= @price %>
      <br/>
      <%= @quantity %>
      <br/>
      <%= @asin %>
    </div>

    <br/>

    <div>
      <h4>You will be redirected to your Amazon Shopping cart in a new tab.
        Please use <%= @user.name %>'s delivery address:</h4>

      <h3><%= @user.name %></h3>

      <h3><%= @user.street_address %></h3>

      <h3><%= @user.city %>
        <%= @user.state %>
        <%= @user.zip_code %></h3>

      <h4>Once you have finished paying for the item on Amazon click here to redeem your gift!</h4>

    </div>

  </div>
  
</div>
