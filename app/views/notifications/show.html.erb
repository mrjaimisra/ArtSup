<%= render partial: "layouts/navbar" %>

<div class="container">

  <div class="row">

  </div>
  <div class="col-md-6">
    <%= form_tag "/notifications" do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control", value: current_user.email %>
      </div>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: "form-control", value: current_user.name %>
      </div>
      <div class="form-group">
        <%= label_tag :artist %>
        <%= text_field_tag :artist, "", class: "form-control", value: @user.name %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Send Email", class: "btn btn-success form-control" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">

  </div>
</div>

